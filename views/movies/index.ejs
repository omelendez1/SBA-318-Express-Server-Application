<!DOCTYPE html>
<html>
<head>
  <title>Watchlist Vault</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>ðŸŽ¬ Watchlist Vault</h1>
  <a href="/movies/new">Add New Movie</a>
  <h2>Movie List</h2>
  <table>
    <tr>
      <th>Title</th><th>Genre</th><th>Rating</th><th>Actions</th>
    </tr>
    <% movies.forEach(movie => { %>
      <tr>
        <td><a href="/movies/<%= movie.id %>"><%= movie.title %></a></td>
        <td><%= movie.genre %></td>
        <td><%= movie.rating %></td>
        <td>
          <a href="/movies/<%= movie.id %>/edit">Edit</a>
          <form action="/movies/<%= movie.id %>?_method=DELETE" method="POST" style="display:inline;">
            <button>Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>